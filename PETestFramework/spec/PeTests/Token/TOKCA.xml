<?xml-stylesheet type="text/xsl" href="../xsl/PMSpec.xsl"?>
<PMSpec>
    <Name>TOKCA</Name>
    <Title>Token File Cascade</Title>
    <Description>Check how tokens handles cascading between views</Description>
    <Category>PeTests/Token</Category>
    <CQ></CQ>
    <Note></Note>
    <Tests>
        <Test>
            <Name>TOKCA01</Name>
            <Header>5</Header>
            <Description>Check Token cascade with 5 views</Description>
            <Source>WBXML</Source>
            <XMLFiles>
              <XMLFile>
                <Name>tokca.xml</Name>
                <Replacements>
                    <Replacement>
                        <Replace>%PFTYPE%</Replace>
                        <With>TOKEN</With>
                    </Replacement>  
                </Replacements>                      
              </XMLFile>
            </XMLFiles>
            <RefFiles>
            </RefFiles>                    
            <EventFiles>
                <EventFile>
                    <DDName>ALLTYPE</DDName>
                    <FileName>ALLTYPE</FileName>
                </EventFile>
            </EventFiles>
            <ExtractFiles>
                <ExtractFile>
                    <DDName>F0001002</DDName>
                    <SPACE>TRK</SPACE>
                    <PRIMARY>1</PRIMARY>
                    <SECONDARY>1</SECONDARY>
                    <RECFM>FB</RECFM>
                    <LRECL>38</LRECL>
                </ExtractFile>
            </ExtractFiles>            
            <Result>
                <Success>
                </Success>
            </Result>
        </Test>                
    </Tests>
</PMSpec>
