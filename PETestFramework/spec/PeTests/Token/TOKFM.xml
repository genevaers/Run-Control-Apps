<?xml-stylesheet type="text/xsl" href="../xsl/PMSpec.xsl"?>
<PMSpec>
    <Name>TOKFM</Name>
    <Title>Token File Format</Title>
    <Description>Check how tokens handle different output format types</Description>
    <Category>PeTests/Token</Category>
    <CQ></CQ>
    <Note></Note>
    <Tests>
        <Test>
            <Name>TOKFM01</Name>
            <Header>FB</Header>
            <Description>Check Token with FB format type</Description>
            <Source>WBXML</Source>
            <XMLFiles>
              <XMLFile>
                <Name>tokfm.xml</Name>
                <Replacements>
                    <Replacement>
                        <Replace>%PFTYPE%</Replace>
                        <With>TOKEN</With>
                    </Replacement>  
                </Replacements>                                      
              </XMLFile>
            </XMLFiles>
            <RefFiles>
            </RefFiles>                    
            <EventFiles>
                <EventFile>
                    <DDName>ALLTYPE</DDName>
                    <FileName>ALLTYPE</FileName>
                </EventFile>
            </EventFiles>
            <ExtractFiles>
                <ExtractFile>
                    <DDName>F0011234</DDName>
                    <SPACE>TRK</SPACE>
                    <PRIMARY>1</PRIMARY>
                    <SECONDARY>1</SECONDARY>
                    <RECFM>FB</RECFM>
                    <LRECL>38</LRECL>
                    <BLKSIZE>76</BLKSIZE>
                </ExtractFile>
            </ExtractFiles>            
            <Result>
                <Success>
                </Success>
            </Result>
        </Test>                
